# ---- STAGE 1: Build Angular App ----
FROM node:18 AS build
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Build Angular (production build)
RUN npm run build

# ---- STAGE 2: Run Nginx Server ----
FROM nginx:alpine

# Copy built Angular app into Nginx HTML directory
COPY --from=build /app/dist/angular-frontend /usr/share/nginx/html

# Expose port 80
EXPOSE 80

# Start Nginx
=======
